<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">

    <TextView
        android:id="@+id/card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/card_cost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CARD NAME" />

    <TextView
        android:id="@+id/card_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card_name"
        tools:text="5" />

    <TextView
        android:id="@+id/card_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/card_name"
        app:layout_constraintTop_toBottomOf="@+id/card_name"
        tools:text="TYPE" />

    <TextView
        android:id="@+id/card_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/card_type"
        app:layout_constraintTop_toBottomOf="@+id/card_name"
        tools:text="JOB" />

    <TextView
        android:id="@+id/card_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/card_cost"
        app:layout_constraintTop_toBottomOf="@+id/card_cost"
        tools:text="SET" />

    <TextView
        android:id="@+id/card_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/card_set"
        app:layout_constraintStart_toStartOf="@+id/card_type"
        app:layout_constraintTop_toBottomOf="@+id/card_job"
        tools:text="TEXT" />

    <TextView
        android:id="@+id/card_rarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/card_text"
        app:layout_constraintTop_toBottomOf="@+id/card_text"
        tools:text="R" />

    <TextView
        android:id="@+id/card_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/card_text"
        app:layout_constraintTop_toBottomOf="@+id/card_text"
        tools:text="9000" />



</androidx.constraintlayout.widget.ConstraintLayout>